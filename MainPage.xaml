<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Tarea2._2FirmaDigital.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#fafcd3">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Frame
            Grid.Row="0"
            Margin="0,0,0,0"
            Padding="5,10,5,10"
            BackgroundColor="#a8caba"
            BorderColor="Black"
            CornerRadius="0">
            <StackLayout
                Margin="0,0,0,0"
                Padding="0,0,0,0"
                BackgroundColor="Transparent"
                Orientation="Horizontal">
                <Image
                    x:Name="btnBack"
                    Margin="10,0,0,0"
                    Aspect="AspectFit"
                    BackgroundColor="Transparent"
                    HeightRequest="40"
                    WidthRequest="40" />
                <BoxView BackgroundColor="Transparent" HorizontalOptions="FillAndExpand" />
                <Label
                    Margin="0,0,90,0"
                    Text="Firmas Digitales"
                    TextColor="Black"
                    TextTransform="Uppercase"
                    FontAttributes="Bold"
                    VerticalOptions="CenterAndExpand" />

            </StackLayout>
        </Frame>

        <ScrollView Grid.Row="1">
            <StackLayout Padding="0,0,0,0" VerticalOptions="CenterAndExpand">
                <Button
                    x:Name="btnAgregarFirma"
                    Margin="30,0,30,20"
                    BackgroundColor="#a8caba"
                    Clicked="btnAgregarFirma_Clicked"
                    CornerRadius="10"             
                    FontSize="15"
                    HeightRequest="50"
                    HorizontalOptions="FillAndExpand"
                    SemanticProperties.Hint="Agregar Firma"
                    Text="Agregar Firma"
                    VerticalOptions="Center" />

                <Button
                    x:Name="btnVerFirmas"
                    Margin="30,0,30,20"
                    BackgroundColor="#a8caba"
                    Clicked="btnVerFirmas_Clicked"
                    CornerRadius="10"
                    FontSize="15"
                    HeightRequest="50"
                    HorizontalOptions="FillAndExpand"
                    SemanticProperties.Hint="Ver Firmas"
                    Text="Ver Firmas"
                    VerticalOptions="Center" />
            </StackLayout>
        </ScrollView>

    </Grid>





</ContentPage>
